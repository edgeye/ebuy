<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="net.gupt.ebuy.pojo.Payment" table="payment">
		<id name="id" type="java.lang.Integer" column="pay_id">
			<!-- generator用来指明主键的生成方式  Mysql 数据库一般使用 identity-->
			<generator class="identity"></generator>
		</id>
		<property name="way" type="java.lang.String" column="pay_way"></property>
		<property name="msg" type="java.lang.String" column="pay_msg"></property>
	</class>
</hibernate-mapping>